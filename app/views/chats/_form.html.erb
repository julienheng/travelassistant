<%= simple_form_for [@chat, @message],
    html: {
      class: "d-flex",
      data: {
        action: "turbo:submit-end->chat-subscription#resetForm"
      }
    } do |f|
  %>
    <div class="message-container col-12 text-center">
      <% if current_user.role == "admin" %>
        <div class="accordion accordion-flush" id="accordionFlushExample">
          <div class="accordion-item">
            <h2 class="accordion-header" id="flush-headingOne">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                Enter Promotion Details
              </button>
            </h2>
            <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
              <div class="accordion-body">
                <%= f.input :title %>
                <%= f.input :content,
                  placeholder: "Maximum 100 Chars",
                  wrapper_html: {class: "flex-grow-1"},
                  maxlength:"100"
                %>
                <%= f.input :start_date, as: :date, html5: true %>
                <%= f.input :end_date, as: :date, html5: true %>
                <%= f.input :photo, as: :file, label: "Image (If required)" %></div>
              </div>
            </div>
          </div>
          <%= f.submit "Send", class: "btn btn-primary mt-2" %>
          <%= link_to "Back To Dashboard", dashboard_page_path, class: "btn btn-red mt-3" %>
        </div>
      <% else %>
        <%= "Check Out The Latest Happening in ##{@chat.name}" %>
      <% end %>
    </div>
  <% end %>
