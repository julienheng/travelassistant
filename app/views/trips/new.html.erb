<div class="newtrip-container">
    <div class="back-home-button">
      <%= link_to "< Home", root_path %>
    </div>
    <div class="newtrip-second-container" data-controller="create-trip" data-create-trip-current-step-value="budget" >

    <%= simple_form_for((@trip), data: { create_trip_target: "form" }) do |f| %>

      <%# --------- BUDGET ---------   %>
      <div class="trip-step createtrip-budget active" data-create-trip-target="budget" >

        <div class="img-budget">
          <%= image_tag "travel1.jpg", width: 350 %>
        </div>

        <h2 class="text-center fs-1">What's your total budget?</h1>
        <%= f.input :budget, :label => 'Amount in SGD', class: "fs-3" %>

        <div class="main-buttons d-flex">
          <button type="button" class="next-button btn btn-outline" data-create-trip-target="next" data-action="click->create-trip#next">Next</button>
        </div>
      </div>

      <%# --------- FLIGHT ---------   %>
      <div class="trip-step createtrip-flight" data-create-trip-target="flight">

        <div class="img-flight">
          <%= image_tag "travel2.jpg", width: 300 %>
        </div>

        <h2 class="text-center fs-1">Where are you heading to?</h2>
        <%= f.input :origin %>
        <%= f.input :destination %>

        <div class="main-buttons d-flex">
          <%= render "trips/createtrip_button"%>
          <button type="button" class="next-button btn btn-outline" data-create-trip-target="next" data-action="click->create-trip#next">Next</button>
        </div>
      </div>

      <%# --------- TYPE OF FLIGHT ---------   %>
      <div class="trip-step createtrip-flighttype" data-create-trip-target="type">

        <h2 class="text-center fs-1">Let the journey begin</h2>

        <div class="flight-buttons">
          <button type="button" class="rtflight-button1 btn btn" data-bs-toggle="button" data-action="click->create-trip#flightYes" data-create-trip-flight-step-value="yes">
            <span class="span1">Round trip</span>
          </button>
          <button type="button" class="rtflight-button2 btn btn" data-bs-toggle="button" data-action="click->create-trip#flightNo">
            <span class="span2">One Way</span>
          </button>
        </div>

          <%= f.input :start_date, label: "Depart", as: :date %>
          <%= f.input :end_date, label: "Return", wrapper_html: { data: { create_trip_target: "owdate" }}, as: :date %>

        <div class="submit-button">
          <%= render "trips/createtrip_button"%>
          <%= f.submit "Submit",  data: { create_trip_target: "submit"} , class: "submit-trip btn btn-white btn-animated"  %>
        </div>
      </div>

    <% end %>
  </div>
</div>
