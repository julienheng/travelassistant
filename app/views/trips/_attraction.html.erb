<div class="carousel-item <%= 'active' if index.zero? %>" data-select-from-cards-target="card">
  <div class="hotel-cards row px-1 mt-4 mx-0">
      <%= image_tag "gardens.jpg", width:"100%" %>
      <div class="hotel-card text-center">
        <h4 class="acc-name mt-2"><strong><%= attraction.name %></strong></h4>
        <p><em><%= attraction.category_name %></em></p>
        <p><%= attraction.address %></p>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star"></span>
        <p>Rating: <%= attraction.rating %>/5</p>
        <p><strong>Estimated Price: <%= attraction.price %></strong></p>
        <div class="text-center">
          <a href="#" class="btn btn-primary" data-action="select-from-cards#click" data-value=<%= index %>>Select</a>
        </div>
      </div>
  </div>
</div>
