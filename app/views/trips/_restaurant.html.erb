<div class="carousel-item <%= 'active' if index.zero? %>" data-value=<%=index%> data-select-from-cards-target="card">

  <% imgres = ["fish-chips.jpeg", "Blacklock-Shoreditch.jpg", "pizza.jpeg", "cafe.png", "italianfusion.jpg", "medit.jpg"] %>

  <div class="hotel-cards mt-4 mx-0">
      <%= image_tag "#{imgres[index]}", width:"100%", height:"200px", class:"rounded-4" %>
      <div class="hotel-card text-center">
        <h4 class="acc-name mt-2"><strong><%= restaurant.name %></strong></h4>
        <p><em><%= restaurant.serves_cuisine %></em></p>
        <p><%= restaurant.street %>, <%= restaurant.postal_code %></p>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star"></span>
        <h5><strong>Estimated Price: $<%= restaurant.price_range %></strong></h5>
        <br>
        <div class="text-center">
          <a href="#" class="btn btn-primary" data-action="select-from-cards#click" data-value=<%= index %>>Select</a>
        </div>
      </div>
  </div>
</div>
