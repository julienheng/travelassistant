<div id="carouselRestaurantControls" class="carousel carousel-dark slide" data-bs-ride="carousel">

  <!-- Slider contents -->
  <div class="carousel-inner">
    <% @restaurants.each_with_index do |restaurant, index| %>
      <%= render 'restaurant', restaurant: restaurant, index: index, count: @attractions.count %>
    <% end %>
  </div>

  <!-- Slider controls -->
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselRestaurantControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselRestaurantControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>      <span class="visually-hidden">Next</span>
  </button>
</div>
