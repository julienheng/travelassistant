<div class="carousel-item <%= 'active' if index.zero? %>" data-select-from-cards-target="card">
  <div class="hotel-cards px-1 mt-4 mx-0 ">
      <%= image_tag "hotel.jpg", width:"100%" %>
      <div class="hotel-card text-center">
        <h4 class="acc-name mt-2"><strong><%= accommodation.name %></strong></h4>
        <p><%= accommodation.address %></p>
        <p><%= accommodation.stars %>-stars Hotel</p>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star"></span>
        <br>
        <p>Rating: <%= accommodation.value %>/10</p>
        <p>Description: <%= accommodation.description.capitalize %></p>
        <%= image_tag "agoda.png", width:"40%" %>
        <p><strong>Estimated Price: <%= accommodation.price %></p></strong>
        <div class="text-center">
          <a href="#" class="btn btn-primary" data-action="select-from-cards#click" data-value=<%= index %>>Select</a>
        </div>
      </div>
  </div>
</div>
