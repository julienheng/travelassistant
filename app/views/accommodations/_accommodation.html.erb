<div class="carousel-item <%= 'active' if index.zero? %>" data-select-from-cards-target="card">
  <div class="hotel-cards mt-4 mx-0 ">
      <%= image_tag "hotel.jpg", width:"100%", class:"rounded-4" %>
      <div class="hotel-card text-center">
        <h4 class="acc-name mt-2"><strong><%= accommodation.name %></strong></h4>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star"></span>
        <br>
        <p><%= accommodation.address %></p>
        <%= image_tag "agoda.png", width:"40%" %>
        <h5><strong>Estimated Price: <%= accommodation.price %></strong></h5>
        <br>
        <div class="text-center">
          <a href="#" class="btn btn-primary" data-action="select-from-cards#click" data-value=<%= index %>>Select</a>
        </div>
      </div>
  </div>
</div>
